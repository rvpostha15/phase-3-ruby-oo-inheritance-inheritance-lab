#!/usr/bin/env ruby

require_relative "../lib/user"
require_relative "../lib/teacher"
require_relative "../lib/student"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = Student.new
jim.first_name = "Jim"
jim.last_name = "Terabithia"

some_knowledge = avi.teach 
some_more_knowledge = avi.teach 

steve.learn(some_knowledge)
steve.learn(some_more_knowledge)
jim.learn(some_knowledge)



puts "Steve and Jim just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

puts "Avi also taught Steve #{steve.knowledge[1]}"

puts "Steve learned: #{steve.knowledge.join(', and ')}"
puts "Jim learned: #{jim.knowledge.join(', and ')}"

